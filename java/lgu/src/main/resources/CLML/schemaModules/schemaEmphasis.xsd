		</xsd:annotation>			
		<xsd:choice>
			<xsd:element name="Inferior">
				<xsd:complexType mixed="true">
					<xsd:choice minOccurs="0" maxOccurs="unbounded">
						<xsd:group ref="EmphasisRestricted"/>
						<xsd:group ref="StrongRestricted"/>
